<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentBusiness"
    android:weightSum="1">

	<ExpandableListView
	    android:id="@+id/expandableListView"
	    android:layout_width="match_parent"
	    android:layout_height="382dp"
	    android:layout_x="-3dp"
	    android:layout_y="1dp"
        android:layout_weight="1">
	</ExpandableListView>

    <AbsoluteLayout android:layout_width="768px"
        android:layout_height="240px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_menu"
        >

	    <Button
	        android:id="@+id/bus_number_btn"
            android:layout_width="113px"
            android:layout_height="113px"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
            android:background="@drawable/number_button"
	        android:textColor="#444444"
            android:layout_x="31dp"
            android:layout_y="56dp" />

	    <Button
	        android:id="@+id/bus_customer_btn"
            android:layout_width="113px"
            android:layout_height="113px"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentStart="true"
            android:background="@drawable/customer_button"
            android:layout_x="265dp"
            android:layout_y="57dp" />
	</AbsoluteLayout>

</LinearLayout>
