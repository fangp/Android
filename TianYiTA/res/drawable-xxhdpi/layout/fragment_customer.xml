<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/customer"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->



    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="398dp"
        android:id="@+id/expandableListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/fromContact"
        android:layout_weight="7.50" />

    <AbsoluteLayout android:layout_width="768px"
        android:layout_height="240px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_menu" >

    <Button
        android:layout_width="113px"
        android:layout_height="113px"
        android:background="@drawable/fromcontect_button"
        android:id="@+id/fromContact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="25dp"
        android:layout_y="48dp" />

    <Button
        android:layout_width="113px"
        android:layout_height="113px"
        android:background="@drawable/add_button"
        android:id="@+id/newCustomer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="296dp"
        android:layout_y="50dp" />

    <Button
        android:layout_width="113px"
        android:layout_height="113px"
        android:background="@drawable/push_button"
        android:id="@+id/Recommend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_x="164dp"
        android:layout_y="48dp" />

    <Button
        android:layout_width="113px"
        android:layout_height="113px"
        android:background="@drawable/cancel_button"
        android:id="@+id/Cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="25dp"
        android:layout_y="50dp" />

    <Button
        android:layout_width="113px"
        android:layout_height="113px"
        android:background="@drawable/allcheck_button"
        android:id="@+id/AllCheck"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="297dp"
        android:layout_y="52dp" />
    </AbsoluteLayout>

</LinearLayout>
