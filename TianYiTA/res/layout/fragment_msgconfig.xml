<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <EditText
        android:id="@+id/msg_add_txt"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入自定义问候语"
        android:textSize="30px"
        android:layout_weight="0.46" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:orientation="horizontal"
        android:layout_weight="0.57">
    </LinearLayout>

    <AbsoluteLayout android:layout_width="768px"
        android:layout_height="240px"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_menu"
        >

        <Button
            android:id="@+id/msg_save_btn"
            android:layout_width="113px"
            android:layout_height="113px"
            android:background="@drawable/save_button"
            android:onClick="msg_save"
            android:layout_gravity="bottom"
            android:layout_x="270dp"
            android:layout_y="58dp" />

    </AbsoluteLayout>
   

</LinearLayout>
